    <Style x:Key="DarkBlueButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#101728"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderThickness="0" CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#190E68"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style x:Key="PurpleButton" TargetType="{x:Type Button}">
